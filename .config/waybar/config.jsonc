{
"layer": "bot",
"spacing": 8,
"height": 32,
"margin-top": 0,
"position": "bottom",
"margin-right": 8,
"margin-bottom": 4,
"margin-left": 8,

"modules-left": [
"hyprland/workspaces"
],

"modules-center": [
"clock"
],

"modules-right": [
"tray",
"network",
"pulseaudio",
"custom/power"
],


"tray": {
"spacing": 10,
"tooltip": false
},

"clock": {
"format": "{:%a %b %d %OI:%M%p}",
"tooltip": false
},

"network": {
"format-wifi" : "{bandwidthDownBits}",
"format-ethernet": "{bandwidthDownBits}",
"format-disconnected" : "No Network",
"interval": 5,
"tooltip": false
},

"pulseaudio": {
"scroll-step": 5,
"max-volume": 150,
"format": "{volume}%",
"format-bluetooth": "{icon} {volume}%",
"format-icons": ["", "", " "],
"nospacing": 1,
"format-muted": " ",
"on-click": "pavucontrol",
"tooltip": false
},


"custom/power": {
    "format" : " ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
}
}
